<p>コメント件数：<%= post.post_comments.count %></p>
<div class="container">
  <div class="d-flex flex-column bd-highlight mb-3">
    <% post.post_comments.each do |post_comment| %>
    <div class="d-flex justify-content-start">
      <div>
        <%= link_to admin_user_path(post.user.id) do %>
          <%= post_comment.user.name %>
        <% end %>
      </div>
      <div class="mx-3">
        <%= post_comment.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
      <div class="mx-3">
        <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true %>
      </div>
    </div>
      <p class="text-break"><%= post_comment.comment %></p>
    <% end %>
  </div>
</div>