<div class="container">
  <div class="row">
    <div class="col-md-8 mt-3">
      <table>
        <thead>
          <tr><th>プロフィール編集</th></tr>
        </thead>
        <tbody>
          <%= form_with model: @user, url: user_path do |f| %>
          <tr>
            <td>
              <div class="d-flex align-items-center justify-content-center">
                <label for="inputName">Name</label>
                <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
              </div>
            </td>
            <td>
              <div class="d-flex align-items-center justify-content-center">
                <label for="inputImage">ProfileImage</label>
                <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
              </div>
            </td>
            <td>
              <div class="d-flex align-items-center justify-content-center">
                <label for="inputIntroduction">Introduction</label>
                <%= f.text_field :Introduction, autofocus: true, id: "inputIntroduction", placeholder: "自己紹介文" %>
              </div>
            </td>
            <td>
              <%= f.submit "変更を保存" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </duv>
  </div>
</div>