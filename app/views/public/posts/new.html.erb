<div class='container'>
  <div class='row center'>
    <div class='col-md-6'>
    <%= form_with model: @post, url: posts_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label "写真" %>
        <%= f.file_field :post_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label "説明文" %>
        <%= f.text_field :explanation %>
      </div>
      <div class="form-group">
        <%= f.label :world_url %>
        <%= f.text_field :world_url %>
      </div>
      <div class="form-group">
        <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
        <%= f.text_field :tag_name, value: @tag_list %>
      </div>
      <div class="form-group">
        <%= f.submit "投稿", class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>