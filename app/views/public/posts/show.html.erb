<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto mt-3">
      <h2><span class="bg-light">詳細ページ</span></h2>
      <table class="table table-bordered border-dark">
        <thead class="table-secondary">
          <tr>
            <th>写真</th>
            <th>説明文</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @post.get_post_image(500,500) %></td>
            <td><%= @post.explanation %></td>
          </tr>
        </tbody>
      </table>
      <table>
        <thead>
          <tr>
            <th>ワールドURL　</th>
            <td><%= @post.world_url %></td>
          </tr>
        </thead>
      </table>
      <table>
        <thead>
          <tr>
            <th>タグ　</th>
            <td class="fas fa-tag"><%= @post.tags.map(&:name).join(', ') %></td>
            <% @post_tags.each do |tag| %>
              <td><%=tag.name%><%="(#{tag.posts.count})" %></td>
            <% end %>
            <!--投稿したユーザーしかeditに飛ばすリンクを表示させない-->
            <% if user_signed_in? && current_user.id == @post.user.id %>
              <td><%= link_to 'この投稿を消す', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}"%></td>
　            <td><%= link_to "投稿を編集する", edit_post_path(@post.id), class: "btn btn-sm btn-success" %></td>
            <% end %>
          </tr>
          <tr>
            <th id="favorite-btn_<%= @post.id %>">
            <%= render "public/favorites/favorites-btn", post: @post %></th>
          </tr>
        </thead>
      </table>
      <div id="public_post_comments_index_<%= @post.id %>" >
        <%= render "public/post_comments/post_comments_index", post: @post %></div>
      <div id="public_post_comments_form_<%= @post.id %>" >
        <%= render "public/post_comments/post_comments_form", post: @post, post_comment: @post_comment %></div>
    </div>
  </div>
</div>
