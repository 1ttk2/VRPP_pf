<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto mt-3">
      <h2><span class="bg-light">詳細ページ</span></h2>
        <div>写真</div>
        <div>説明文</div>
        <div><%= image_tag @post.get_post_image(800,800) %></div>
        <div><%= @post.explanation %></div>
        <div>ワールドURL</div>
        <div><%= @post.world_url %></div>
        <div>タグ</div>
        <div class="fas fa-tag"><%= @post.tags.map(&:name).join(', ') %></div>
        <% @post_tags.each do |tag| %>
          <div><%=tag.name%><%="(#{tag.posts.count})" %></div>
        <% end %>
        <!--投稿したユーザーしかeditに飛ばすリンクを表示させない-->
        <% if user_signed_in? && current_user.id == @post.user.id %>
          <%= link_to 'この投稿を消す', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}"%></td>
　        <%= link_to "投稿を編集する", edit_post_path(@post.id), class: "btn btn-sm btn-success" %>
        <% end %>

        <div id="favorite-btn_<%= @post.id %>">
          <%= render "public/favorites/favorites-btn", post: @post %>
        </div>
        <div id="public_post_comments_index_<%= @post.id %>" >
          <%= render "public/post_comments/post_comments_index", post: @post %>
        </div>
        <div id="public_post_comments_form_<%= @post.id %>" >
          <%= render "public/post_comments/post_comments_form", post: @post, post_comment: @post_comment %>
        </div>
    </div>
  </div>
</div>
